<div class="container" id="artContainer">
	<div class="row-fluid">
		<div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
			<%= render 'layouts/menu' %>
		</div>
			
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" id="logoDiv">
			<%= image_tag("nldr_text2.png", :id=> "art") %>
			<h5 class="text-center text-uppercase" id="location">Madison, Wisconsin</h5>
		</div>
			
		<div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 text-center">
			<div class="col-xs-6 facebook-paypal-links">
				<%= link_to(image_tag("FB-f-Logo__blue_50.png", :title =>"Facebook"), "https://www.facebook.com/cardatraining") %>
			</div>
			<div class="col-xs-6 facebook-paypal-links">
				<%= link_to(image_tag("ppal.jpg", :title =>"PayPal"), "https://www.paypal.com/us/webapps/mpp/home#n1") %>
			</div>
			<div class="col-xs-12">
				<h6 class="text-center" id="payment">Check, money order, or PayPal accepted</h6>
			</div>			
		</div>	
	</div>
</div>
